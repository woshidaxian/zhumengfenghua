/* pages/map/map.wxss */
.container-map{
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
}
.map-top-box{
  width: 70%;
  height: 60rpx;
  background: #fff;
  border-radius: 30rpx;
  position: fixed;
  top: 20rpx;
  left: 10%;
  display: flex;
  flex-direction: row;
  /* justify-content: center; */
  align-items: center;
  box-shadow: 0rpx 0rpx 10rpx 0rpx rgb(230, 230, 230);
}
.top-box-img{
  width: 40rpx;
  height: 40rpx;
  margin-left: 6%;
}
.top-inp{
  width: 70%;
  height: 60rpx;
  border: 1px solid red;
}
.map-box{
  width: 670rpx;
  height: 320rpx;
  background: #fff;
  position: fixed;
  bottom: 0;
  padding: 20rpx 40rpx;
  font-size: 26rpx;
}
.map-search{
  width: 550rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 34rpx;
  text-align: center;
  position: fixed;
  top: 20rpx;
  background: #fff;
  left: 0;
  right: 0;
  margin: 0 auto;
  border-radius: 28rpx;
}
.map-box-top::after{
  content: '';
  display: block;
  clear: both;
}
.map-box-top{
  border-bottom: 1px solid #f5f5f5;
}
.top-left{
  width: 510rpx;
  float: left;
  height: 200rpx;
}
.top-right{
  float: left;
  width: 160rpx;
  height: 200rpx;
}
/* 我的位置 */
.top-left-1{
  font-size: 38rpx;
  margin-top: 20rpx;
}
.top-left-2{
  margin-top: 20rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}
.top-left-3{
  margin-top: 20rpx;
  color: #9b9b9b;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.round{
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  background: #ffe4d3;
  margin: 0 auto;
  margin-top: 28rpx;
  text-align: center;
}

.roundImg{
  width: 68rpx;
  height: 68rpx;
  margin: 0 auto;
  margin-top: 20rpx;
}

.map-box-bottom{
  height: 90rpx;
  padding-top: 40rpx;
  font-size: 32rpx;
}
.bottom-icon{
  width: 40rpx;
  height: 40rpx;
  float: left;
}
.btn-type,.btn-car{
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: #b9bdc9;
  color: #fff;
  font-size: 32rpx;
  border: none;
}
.map-box-bottom-1{
  float: left;
  width: 222rpx;
}
.map-box-bottom-2{
  float: left;
  width: 222rpx;
}
.map-box-bottom-3{
  float: left;
  width: 215rpx;
  margin-left: 8rpx;
}