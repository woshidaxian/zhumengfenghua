/* pages/strategy/strategy.wxss */
.fixedBar{
  width:100%;
  height: 90rpx;
  background: #e8e8e8;
  position: fixed;
  top: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.noneBar{
  width: 100%;
  height: 90rpx;
  background: transparent;
}
.inp-view{
  width: 95%;
  display: flex;
  flex-direction: row;
  background: #fff;
  border-radius: 28rpx;
}
.inp-view-img{
  width: 45rpx;
  height: 45rpx;
  margin-left: 20rpx;
  margin-top: 10rpx;
}
.inp{
  width: 85%;
  height: 60rpx;
  background: #fff;
  outline: none;
  border: none;
  font-size: 30rpx;
  margin-left: 10rpx;
}


.box{
  display: flex;
  flex-direction: row;
}
.v-top{
  background: #fff;
}
.box-left{
  width: 50%;
  background: #f7f7f7;
  padding: 12rpx;
}
.box-right-v,.box-left-v{
  margin-bottom: 15rpx;
}
.box-right{
  width: 50%;
  background: #f7f7f7;
  padding: 12rpx;
  padding-left: 0;
}
.v-img{
  width: 100%;
}
.bottom-1{
  width: 90%;
  padding: 0 5%;
  max-height: 65rpx;
  font-size: 26rpx;
  overflow: hidden;
  display: -webkit-box;
  text-overflow: ellipsis;
  word-wrap: break-word;
  white-space: normal !important;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.bottom-2{
  display: flex;
  flex-direction: row;
  font-size: 26rpx;
  line-height: 40rpx;
  padding: 14rpx;
  margin-top: 10rpx;
  color: #aaaaaa;
}
.img-head{
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
}
.img-zan,.img-mess{
  width: 32rpx;
  height: 32rpx;
}
.bottom-2-zan{
  margin-left: 70rpx;
}
.bottom-2-name{
  margin-left: 10rpx;
}
.bottom-2-mess{
  margin-left: 20rpx;
  padding-top: 4rpx;
}
.bottom-txt{
  margin-left: 10rpx;
  color: #aaaaaa;
}
.v-bottom{
  background: #fff;
}



.fixedJiaHao{
  width: 130rpx;
  height: 130rpx;
  background: #fff;
  border-radius: 50%;
  position: fixed;
  bottom: 60rpx;
  right: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.jiahao{
  width: 122rpx;
  height: 122rpx;
  border-radius: 50%;
  background: #515fa0;
  text-align: center;
  font-size: 100rpx;
  line-height: 106rpx;
  color: #fff;
}