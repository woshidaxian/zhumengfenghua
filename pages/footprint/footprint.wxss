/* pages/footprint/footprint.wxss */
.view-none-top{
  height: 90rpx;
  background: #fff;
}
.view-none-bottom{
  height: 110rpx;
  background: #fff;
}
.view-top{
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  height: 90rpx;
  line-height: 90rpx;
  background: #fff;
  position: fixed;
  top: 0;
  padding-left: 20rpx;
  padding-right: 20rpx;
}
.tab,.tab-end{
  padding: 0 32rpx;
  color: #929292;
}
.tab-end{
  color: #6d79ab;
  font-weight: bold;
}
.tab-active{
  border-bottom: 2px solid #00b800;
  color: black;
}
.view-center{
  width: 100%;
  background: #ebebeb;
  padding: 20rpx 30rpx;
  display: flex;
  flex-direction: row;
}
.center-left{
  width: 15%;
  padding-top: 20rpx;
}
.center-right{
  width: 77%;
}
.line{
  width: 22%;
  height: 100%;
  border-right: 1px solid #38c736;
}
.line-round-white{
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: #fff;
  display: flex;
  align-items: center;
  justify-content: center;
}
.line-round-purple{
  width: 44rpx;
  height: 44rpx;
  border-radius: 50%;
  background: #6d79ab;
  line-height: 44rpx;
  text-align: center;
}
.line-icon{
  width: 28rpx;
  height: 28rpx;
}
.center-box{
  padding: 20rpx;
  padding-top: 0;
  width: 93%;
  background: #fff;
  border-radius: 10rpx;
  margin-bottom: 30rpx;
}
.box-top{
  display: flex;
  flex-direction: row;
}
.box-time{
  padding: 5rpx 20rpx;
  background: #ebebeb;
  border-radius: 18rpx;
  font-size: 26rpx;
  color: #686868;
}
.box-place{
  font-size: 26rpx;
  color: #5e5e5e;
  margin-left: 240rpx;
}
.box-center{
  margin-top: 16rpx;
  border-bottom: 1px solid #efefef;
  padding-bottom: 30rpx;
}
.box-text{
  font-size: 30rpx;
}
.box-img-view{
  width: 200rpx;
  height: 200rpx;
  border-radius:10rpx;
  overflow: hidden;
  margin-top: 60rpx;
}
.box-img{
  width: 200rpx;
  height: 200rpx;
}
.box-bottom{
  padding-top: 20rpx;
  display: flex;
  flex-direction: row;
}
.bottom-left{
  width: 50%;
  font-size: 30rpx;
  color: #acacac;
}
.bottom-right{
  width: 50%;
  display: flex;
  flex-direction: row;
  font-size: 28rpx;
  color: #eaeaea;
}
.bottom-right-icon{
  width: 33.3%;
  text-align: center;
}
.bottom-right-icon image{
  width: 34rpx;
  height: 34rpx;
}
.sanjiao{
  width: 0; 
  height: 0;
  border-width: 18rpx;
  border-style: solid;
  border-color: transparent rgb(255, 255, 255) transparent transparent;
  position: relative;
  left: -55rpx;
  top: 30rpx;
}
.box-text-o{
  background: #f4f4f4;
  font-size: 30rpx;
  padding: 15rpx;
  border-radius: 12rpx;
}
.thing-list{
  line-height: 60rpx;
  font-size: 28rpx;
}
.thing-list::after{
  content: '';
  clear: both;
  display: block;
}
.list-right{
  float: right
}
.list-left{
  float: left;
  color: #707070;
}
.view-footer{
  width: 100%;
  height: 110rpx;
  position: fixed;
  bottom: 0;
  background: #fff;
  display: flex;
  flex-direction: row;
}
.footer-left{
  width: 15%;
  height: 80rpx;
  line-height: 80rpx;
  border-right: 1px solid #e9e9e9;
  color: #a5a5a5;
  text-align: center;
  margin: auto;
}
.footer-right{
  width: 85%;
  height: 110rpx;
  line-height: 110rpx;
}
.btn-new{
  margin: auto;
  width: 88%;
  line-height: 70rpx;
  font-size: 32rpx;
  background: #03bb01;
  color: #fff;
  height: 70rpx;
  margin-top: 20rpx;
}