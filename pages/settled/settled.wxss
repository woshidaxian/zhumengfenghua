/* pages/settled/settled.wxss */
.fixedTopBar{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid #c6c6c6;
  position: fixed;
  background: #fff;
  top: 0;
  display: flex;
  flex-direction: row;
  line-height: 100rpx;
  font-size: 32rpx;
}
.fixedNone{
  width: 100%;
  height: 100rpx;
}
.nav-style{
  padding: 0 20rpx;
  color: #b7b7b7;
}
.nav-active{
  border-bottom: 2px solid #9696ef;
  color: black;
}


.view-style{
  height: 140rpx;
  line-height: 140rpx;
  border-bottom: 1px solid #f4f4f4;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.view-img{
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-left: 40rpx;
}
.img-style{
  width: 100rpx;
  height: 100rpx;
}
.view-name{
  margin-left: 20rpx;
  font-size: 36rpx;
  width: 60%;
}
.view-status{
  font-size: 36rpx;
  color: #d0d0d0;
  height: 140rpx;
}