/* pages/message/message.wxss */
.fixedTop{
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  position: fixed;
  top: 0;
  box-shadow: 0rpx 0rpx 10rpx 0rpx #97a1b7;
  background: #fff;
}
.noneTop{
  width: 100%;
  height: 100rpx;
}
.top-nav{
  width: 50%;
  height: 100%;
  line-height: 100rpx;
  text-align: center;
  color: #97a1b7;
  font-size: 33rpx;
}
.active-nav{
  color: #0dbcc5;
  border-bottom: 4rpx solid #0dbcc5;
}
.mess-box{
  width: 100%;
  padding: 30rpx;
  padding-bottom: 0;
  padding-right: 0;
  display: flex;
  flex-direction: row;
}
.box-left{
  width: 110rpx;
  height: 110rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.box-right{
  width: 588rpx;
  border-bottom: 2rpx solid #dadada;
  margin-left: 20rpx;
  padding-bottom: 30rpx;
}
.imgStyle{
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
}
.box-right-top{
  display: flex;
  flex-direction: row;
  font-size: 30rpx;
  padding-top: 20rpx;
}
.top-nickname{
  width: 460rpx;
}
.top-time{
  color: #a6afc2;
}
.txtStyle1{
  font-size: 30rpx;
  margin-top: 10rpx;
}
.txtStyle2{
  color: #0dbcc5;
  font-size: 30rpx;
  margin-top: 8rpx;
}
.txtStyle3{
  color: #b3b3b3;
  font-size: 30rpx;
  margin-top: 10rpx;
}