/* pages/find/find.wxss */
.topImg{
  width: 100%;
}
.view-bottom{
  width: 100%;
  height: 700rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.bottom-1{
  width: 92%;
  /* height: 500rpx; */
  padding-bottom: 40rpx;
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0rpx 5rpx 10rpx 6rpx rgb(218, 218, 218);
  position: relative;
  top: -8rpx;
  z-index: 999;
}
.bottom-2{
  width: 86%;
  height: 50rpx;
  background: #fff;
  box-shadow: 0rpx 5rpx 15rpx 6rpx rgb(218, 218, 218);
  border-radius: 8rpx;
  z-index: 99;
}
.bottom-3{
  width: 78%;
  height: 50rpx;
  border-radius: 8rpx;
  background: #fff;
  box-shadow: 0rpx 5rpx 10rpx 6rpx rgb(218, 218, 218);
}
.head-title{
  font-size: 32rpx;
}
.head{
  padding: 20rpx;
  border-bottom: 1px solid #e4e4e4;
  padding-bottom: 30rpx;
}
.head-label{
  display: flex;
  flex-direction: row;
}
.label{
  margin-top: 18rpx;
  padding: 8rpx 28rpx;
  background: #a6adcc;
  color: #fff;
  font-size: 28rpx;
  border-radius: 24rpx;
  margin-left: 20rpx;
}

.view-mess{
  display: flex;
  flex-direction: row;
  font-size: 32rpx;
  padding: 30rpx;
}
.mess-img image{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  margin-right: 25rpx;
}
.other-name{
  font-size: 34rpx;
}
.other-time{
  color: #606060;
}
.view-txt{
  font-size: 32rpx;
  padding: 0 30rpx;
  color: #777777;
}
.view-btn{
  display: flex;
  flex-direction: row;
}
.btn{
  border: 7rpx solid #d7d7d7;
  border-radius: 40rpx;
  padding: 16rpx 40rpx;
  margin-left: 68rpx;
  font-size: 32rpx;
  color: #d7d7d7;
  margin-top: 20rpx;
}